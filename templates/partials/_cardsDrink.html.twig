<div class="card m-2">
    <div class="imgBx">
        <img src="{{ asset( 'build/images/' ~ drink.img) }}" alt="nike-air-shoe">
    </div>

    <div class="contentBx">

        <h2>{{ drink.name }}</h2>
        <p class="description">{{ drink.description }}</p>

        <div class="prix">
            <p class="prixBurger">{{ drink.price }} €</p>
        </div>

        {% if app.user != null %}
            <a class="btnAjoutCart" href="{{ path('cart_add_drink_id', { 'id': drink.id}) }}"><i class="fa-solid fa-cart-plus"></i> Ajouter au Panier</a>

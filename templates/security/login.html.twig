{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}

    <div class="container w-25 dash">

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a
                            href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
{#            <div class="btnCentrageTest">#}
{#                <h1 class="h3 mb-3 font-weight-normal text-white">Connexion</h1>#}
{#            </div>#}

            <label for="inputEmail" class="text-white">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-4"
                   autocomplete="email" required autofocus>
            <label for="inputPassword" class="mt-4 text-white">Mot de Passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control mt-4"
                   autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}
            <div class="btnCentrage">
                <button class="btn btn-lg btn-primary m-4" type="submit">
                    Se connecter
                </button>
            </div>
        </form>

    </div>
{% endblock %}
